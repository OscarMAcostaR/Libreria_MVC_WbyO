@model Libreria_MVC_WbyO.Models.Cliente

@{
    ViewBag.Title = "Detalles del Cliente";
}

<h2 class="text-center mb-4">Detalles del Cliente</h2>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-body">
            <h4 class="card-title mb-4">Información del Cliente</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.A_Paterno)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.A_Paterno)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.A_Materno)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.A_Materno)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Correo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Correo)</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a href="@Url.Action("Edit", new { id = Model.Id_Cliente })" class="btn btn-primary btn-sm">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm">
                <i class="bi bi-arrow-left-circle"></i> Regresar a la Lista
            </a>
        </div>
    </div>
</div>

@* Asegúrate de incluir los iconos de Bootstrap para que los iconos se vean correctamente *@
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
